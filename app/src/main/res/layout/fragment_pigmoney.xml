<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PigmoneyFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="5dp"
        android:text="나의 순자산"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:fontFamily="@font/notosans_semibold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/black"
            android:textAlignment="textEnd"
            android:textSize="25dp"
            android:fontFamily="@font/notosans_bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/notosans_bold" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/rec_skyblue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/last_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:src="@drawable/caret_left" />

        <TextView
            android:id="@+id/now_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:fontFamily="@font/notosans_semibold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="월"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:fontFamily="@font/notosans_semibold" />

        <ImageView
            android:id="@+id/next_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:src="@drawable/caret_right" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/assess_btn"
            android:layout_width="90dp"
            android:layout_height="28dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_circle_gray"
            android:text="분석"
            android:textSize="12dp"
            android:layout_gravity="bottom"
            android:elevation="3dp"
            android:fontFamily="@font/notosans_semibold"
            android:textColor="#787878" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="예산"
            android:textColor="#737373"
            android:textSize="15dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/notosans_medium" />

        <TextView
            android:id="@+id/plan_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/notosans_bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/notosans_bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지출"
            android:textColor="#737373"
            android:textSize="15dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/notosans_medium" />

        <TextView
            android:id="@+id/spent_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/notosans_bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/notosans_bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수입"
            android:textColor="#737373"
            android:textSize="15dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/notosans_medium" />

        <TextView
            android:id="@+id/income_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#48D366"
            android:textSize="18dp"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/notosans_bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원"
            android:textColor="#48D366"
            android:textSize="18dp"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/notosans_bold" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/rec_gray" />
</LinearLayout>